<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AbCorFlorProyectoP2EasyTicketsMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" BackgroundColor="Purple">

            <Label Text="EasyTickets" 
                   FontSize="36" 
                   HorizontalOptions="Center" 
                   TextColor="#5B5BFF" 
                   FontAttributes="Bold" />

            <Label Text="¡La mejor plataforma para encontrar, comprar y vender tickets!" 
                   FontSize="18" 
                   HorizontalOptions="Center" 
                   TextColor="Black" 
                   HorizontalTextAlignment="Center" />

            <Label Text="Con EasyTickets podrás buscar los mejores eventos, gestionar tus entradas, guardar tus eventos favoritos y mucho más. 
                          También puedes comprar o vender tickets de manera sencilla y segura, e incluso dejar reseñas para otros usuarios."
                   FontSize="16"
                   TextColor="Black"
                   HorizontalTextAlignment="Center" />

            <VerticalStackLayout Spacing="10" HorizontalOptions="FillAndExpand" >
                <Frame Padding="10" Margin="5" BackgroundColor="#FFFFFF" CornerRadius="10" HasShadow="True">
                    <HorizontalStackLayout>
                        <Label Text="🎟" FontSize="24" VerticalOptions="Center"/>
                        <Label Text="Descubre eventos únicos cerca de ti." 
                               FontSize="16" 
                               VerticalOptions="Center" 
                               TextColor="#303030" />
                    </HorizontalStackLayout>
                </Frame>

                <Frame Padding="10" Margin="5" BackgroundColor="#FFFFFF" CornerRadius="10" HasShadow="True">
                    <HorizontalStackLayout>
                        <Label Text="🛒" FontSize="24" VerticalOptions="Center"/>
                        <Label Text="Compra y vende entradas con facilidad." 
                               FontSize="16" 
                               VerticalOptions="Center" 
                               TextColor="#303030" />
                    </HorizontalStackLayout>
                </Frame>

                <Frame Padding="10" Margin="5" BackgroundColor="#FFFFFF" CornerRadius="10" HasShadow="True">
                    <HorizontalStackLayout>
                        <Label Text="⭐" FontSize="24" VerticalOptions="Center"/>
                        <Label Text="Deja reseñas para eventos y tickets." 
                               FontSize="16" 
                               VerticalOptions="Center" 
                               TextColor="#303030" />
                    </HorizontalStackLayout>
                </Frame>

                <Frame Padding="10" Margin="5" BackgroundColor="#FFFFFF" CornerRadius="10" HasShadow="True">
                    <HorizontalStackLayout>
                        <Label Text="💾" FontSize="24" VerticalOptions="Center"/>
                        <Label Text="Guarda eventos que no te quieres perder." 
                               FontSize="16" 
                               VerticalOptions="Center" 
                               TextColor="#303030" />
                    </HorizontalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
