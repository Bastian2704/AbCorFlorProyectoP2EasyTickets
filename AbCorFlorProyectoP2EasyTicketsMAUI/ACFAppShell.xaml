<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AbCorFlorProyectoP2EasyTicketsMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AbCorFlorProyectoP2EasyTicketsMAUI"
    xmlns:views="clr-namespace:AbCorFlorProyectoP2EasyTicketsMAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    
    Title="AbCorFlorProyectoP2EasyTicketsMAUI">


    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent
            Title="Tickets"
            ContentTemplate="{DataTemplate views:ACFTicketsPage}" />
        <ShellContent
            Title="Reviews"
            ContentTemplate="{DataTemplate views:ACFReviewPage}" />
        <ShellContent
           Title="Eventos"
           ContentTemplate="{DataTemplate views:ACFEventosPage}" />
        <ShellContent
           Title="Eventos Guardados"
           ContentTemplate="{DataTemplate views:ACFEventosGuardados}" />
    </TabBar>

</Shell>
